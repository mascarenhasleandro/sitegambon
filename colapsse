<style>
  .footer-block__heading {
  background-color: #eee;
  color: #444;
  cursor: pointer;
  padding: 18px;
  width: 100%;
  border: none;
  text-align: left;
  outline: none;
  font-size: 15px;
}
  
  .footer-block grid__item {
  padding: 0 18px;
  display: none;
  overflow: hidden;
  background-color: #f1f1f1;
  }
  .active,.footer-block__heading:hover{
    background-color:#ccc;
  }
  
</style> 


<script>
var coll = document.getElementsByClassName("footer-block__heading");
var i;

for (i = 0; i < col.length; i++) {
  coll[i].addEventListener("click", function() {
    this.classList.toggle("active");
    var footer-block grid__item = this.nextElementSibling;
    if (footer-block grid__item.style.display === "block") {
      footer-block grid__item.style.display = "none";
    } other {
      footer-block grid__item.style.display = "block";
    }
  });
}
</script>
